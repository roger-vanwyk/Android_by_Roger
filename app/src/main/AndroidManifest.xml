<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.tangleddroid.roger">
    <!-- Adds permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidPortfolio">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailsActivity"
            android:label="@string/details_activity"
            android:parentActivityName=".MainActivity">

            <!-- Meta-data element for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.tangleddroid.roger.MainActivity" />
        </activity>
        <activity
            android:name=".IntroActivity"
            android:exported="false" />
        <activity
            android:name=".AboutActivity"
            android:exported="true"
            android:label="@string/about"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".android_udacity.news.NewsActivity"
            android:exported="false" />
        <activity
            android:name=".android_udacity.guide.GuideActivity"
            android:exported="false" />
        <activity
            android:name=".android_udacity.guide.GuideDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".android_udacity.musical.MusicActivity"
            android:exported="false" />
        <activity
            android:name=".android_udacity.musical.MusicViewerActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".android_udacity.musical.MusicNowPlayingActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".android_udacity.musical.MusicAlbumActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".android_udacity.quiz.QuizActivity"
            android:exported="false" />
        <activity
            android:name=".android_udacity.scorekeeper.ScorekeeperActivity"
            android:exported="false" />
        <activity
            android:name=".android_udacity.card.CardActivity"
            android:exported="false" />
    </application>

</manifest>